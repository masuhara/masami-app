<%# <h3>長澤まさみさんへメッセージを送る</h3> %>
<ul class="list-group">
  <% @projects = Project.all.order(:created_at).reverse_order %>
  <% @projects.each do |project| %>
  <p class='marquee'>
      <%= link_to project.title, project_path(project.id), :style=>"color:white;" %>
      <%= link_to "編集", edit_project_path(project.id), :style=>"color:white;" %>
      <%= link_to "削除", project_path(project.id), method: :delete, data: {
      confirm: "本当に削除しますか?" }, :style=>"color:white;" %>
  </p>
  <% end %>
</ul>

<script src="//code.jquery.com/jquery-git2.min.js"></script>
<script type="text/javascript">
  function getRandomArbitary(min, max) {
    return Math.random() * (max - min) + min;
  }

  $(".marquee").each(function(){
    $(this).css("animation-duration", ""+ getRandomArbitary(3, 20) + "s");
  });
</script>



